server:
  port: 8888
  address: 192.168.1.13

spring:
  application:
    name: apigateway-service
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true

#hystrix:
#  command:
#    fallbackcmd:
#      execution:
#        isolation:
#          thread:
#            timeoutInMilliseconds: 4000

eureka:
  client:
    serviceUrl:
      defaultZone: http://${server.address}:8761/eureka/
    healthcheck:
      enabled: true
  instance:
    hostname: ${server.address}
    ip-address: ${server.address}
    prefer-ip-address: true

management:
  endpoints:
    web:
      exposure:
        include: "*"
